<Window x:Class="WpfKutyakEF.mvvm.view.RendelesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfKutyakEF.mvvm.view"
        mc:Ignorable="d"
        Title="RendelesView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Kutyak}" AutoGenerateColumns="False" ColumnWidth="*" SelectedItem="{Binding SelectedKutya}" IsReadOnly="True" SelectionMode="Single" MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Életkor" Binding="{Binding Eletkor}"/>
                <DataGridTextColumn Header="Utolsó ellenőrzés" Binding="{Binding Utolsoell}"/>
                <DataGridTextColumn Header="Kutya neve" Binding="{Binding Nev.Kutyanev}" />
                <DataGridTextColumn Header="Kutya fajtája" Binding="{Binding Fajta.Nev}" />
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="buttonUj" Content="Új rendelési adat" Width="200" Height="30" Click="buttonUj_Click" />
            <Button x:Name="buttonTorol" Content="Kijelölt törlése" Width="200" Height="30" Click="buttonTorol_Click" Margin="10,0,0,0"/>
        </WrapPanel>

    </Grid>
</Window>
