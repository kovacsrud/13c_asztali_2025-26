<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiRandomuser13c12025.Views.DetailPage"
             Title="DetailPage" NavigationPage.HasNavigationBar="False" BackgroundColor="{StaticResource RuHatter}">

    <ScrollView>
        <Border Margin="10" VerticalOptions="Fill" Stroke="{StaticResource RuStroke}" StrokeShape="RoundRectangle 0,40,40,0">
            <Grid RowDefinitions=".4*,.1*,.1*,.1*,.1*,.1*,.1*">
                <Border StrokeShape="RoundRectangle 20,20,20,20" WidthRequest="200" HeightRequest="200">
                    <Image Source="{Binding picture.large}" WidthRequest="200" HeightRequest="200" />
                </Border>
                <HorizontalStackLayout Grid.Row="1">
                    <Label Text="{Binding name.title}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="5,0,4,0"/>
                    <Label Text="{Binding name.first}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="0,0,4,0"/>
                    <Label Text="{Binding name.last}" FontSize="18" FontFamily="Nexaheavy" TextColor="White" Margin="0,0,4,0"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Row="2">
                    <Label Text="Email:" TextColor="White" FontSize="18" FontFamily="Nexaheavy" Margin="5,0,4,0" />
                    <Label Text="{Binding email}" TextColor="White" FontSize="18" FontFamily="Nexaheavy" Margin="5,0,4,0" />

                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Row="3">
                    <Label Text="Phone:" TextColor="White" FontSize="18" FontFamily="Nexaheavy" Margin="5,0,4,0" />
                    <Label Text="{Binding phone}" TextColor="White" FontSize="18" FontFamily="Nexaheavy" Margin="5,0,4,0" />

                </HorizontalStackLayout>
            </Grid>
                        
        </Border>

    </ScrollView>
      
    
</ContentPage>