<Window x:Class="MaratonvaltoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaratonvaltoGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Menu FontSize="16" Grid.ColumnSpan="2">
            <MenuItem Header="Fájl">
                <MenuItem x:Name="menuitemMegnyitas" Header="Megnyitás" Click="menuitemMegnyitas_Click"/>
                <MenuItem Header="Kilépés" />
            </MenuItem>
        </Menu>
        <TextBlock Text="Maratonváltó versenyzői" Grid.Row="1" FontSize="20" FontWeight="ExtraBold" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Blue"/>
        <TextBlock Text="Futók listája" FontSize="14" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBlock Text="Kiválasztott futó adatai" FontSize="14" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"/>
        <ListBox x:Name="listboxFutok" Grid.Row="3" Grid.RowSpan="10" Margin="20"/>
        <WrapPanel Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Név" FontSize="14" />
            <TextBox x:Name="textboxNev" FontSize="14" Width="300" Height="30" Margin="5,0,5,0" />
        </WrapPanel>
        <WrapPanel Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Rajtszáma" FontSize="14" />
            <TextBox x:Name="textboxRajtszam" FontSize="14" Width="200" Height="30" Margin="5,0,5,0" />
        </WrapPanel>
        <WrapPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Születési év és hó" FontSize="14" />
            <TextBox x:Name="textboxSzulEvHo" FontSize="14" Width="200" Height="30" Margin="5,0,5,0" />
        </WrapPanel>
        <WrapPanel Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Csapat száma" FontSize="14" />
            <TextBox x:Name="textboxCsapatSzam" FontSize="14" Width="200" Height="30" Margin="5,0,5,0" />
        </WrapPanel>
        <WrapPanel Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Hányadik körben futott" FontSize="14" />
            <TextBox FontSize="14" Width="200" Height="30" Margin="5,0,5,0" />
        </WrapPanel>
        <WrapPanel Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Köridő(mp)" FontSize="14" />
            <TextBox FontSize="14" Width="200" Height="30" Margin="5,0,0,0" />
        </WrapPanel>

        <Button x:Name="buttonCsapattarsak" Content=" Csapattársak" Grid.Row="9" Grid.Column="1" Width="300" Height="30"/>
        <TextBlock x:Name="textblockCsapatTagok" Text="tttttt" FontSize="14" Grid.Row="10" Grid.Column="1" Grid.RowSpan="4" TextWrapping="Wrap" Margin="20"/>


    </Grid>
</Window>
