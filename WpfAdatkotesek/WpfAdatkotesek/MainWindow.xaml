<Window x:Class="WpfAdatkotesek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAdatkotesek"
        mc:Ignorable="d"
        Title="Adatkötések" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textboxAllapot" Width="300" Height="30" FontSize="22" TextChanged="textboxAllapot_TextChanged"/>
        <Slider x:Name="sliderAllapot" Grid.Row="1" VerticalAlignment="Center" ValueChanged="sliderAllapot_ValueChanged" Minimum="0" Maximum="300"/>
        <ProgressBar x:Name="progressbarAllapot" Minimum="0" Maximum="300" Grid.Row="2" Height="30" />

    </Grid>
</Window>
