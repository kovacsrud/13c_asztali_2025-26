<Window x:Class="WpfMvvmKutyakDb.Mvvm.View.ViewRendelesekInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmKutyakDb.Mvvm.View"
        mc:Ignorable="d"
        Title="Új rendelés adatai" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockCim" Text="Új rendelés adatai" FontSize="35" Width="500" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
        <TextBox x:Name="textboxEletkor" Text="{Binding SelectedRendeles.Eletkor}" Width="300" Height="40" FontSize="26" Grid.Row="1"/>
        <TextBox x:Name="textboxUtolsoEll" Text="{Binding SelectedRendeles.UtolsoEll}" Width="300" Height="40" FontSize="26" Grid.Row="2"/>
        <ComboBox x:Name="comboKutyanevek" ItemsSource="{Binding Kutyanevek}" DisplayMemberPath="KutyaNev" SelectedValuePath="Id" Width="300" Height="40" FontSize="24" Grid.Row="3"/>
        <ComboBox x:Name="comboKutyafajtak" ItemsSource="{Binding Kutyafajtak}" DisplayMemberPath="Nev" SelectedValuePath="Id" Width="300" Height="40" FontSize="24" Grid.Row="4"/>
        <Button x:Name="buttonMentes" Content="Mentés" Width="200" Height="30" Grid.Row="5" Click="buttonMentes_Click"/>

    </Grid>
</Window>
