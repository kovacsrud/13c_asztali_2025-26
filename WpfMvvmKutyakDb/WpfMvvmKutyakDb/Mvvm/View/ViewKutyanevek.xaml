<Window x:Class="WpfMvvmKutyakDb.Mvvm.View.ViewKutyanevek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmKutyakDb.Mvvm.View"
        mc:Ignorable="d"
        Title="Kutyanevek" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Kutyanevek}" IsReadOnly="True" SelectedItem="{Binding SelectedKutyanev}" ColumnWidth="*" Grid.ColumnSpan="2"/>
        <Button x:Name="buttonUjKutyanev" Content="Új kutyanév" Grid.Row="1" Width="200" Height="30" />
        <Button x:Name="buttonTorolKutyanev" Content="Törlés" Grid.Row="1" Grid.Column="1" Width="200" Height="30" />

    </Grid>
</Window>
